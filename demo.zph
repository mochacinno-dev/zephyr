mod math_utils {
    pub fun clamp(val: Int, lo: Int, hi: Int) -> Int {
        if val < lo { return lo }
        if val > hi { return hi }
        val
    }

    pub fun lerp(a: Float, b: Float, t: Float) -> Float {
        a + (b - a) * t
    }
}


