// â”€â”€ 10. Impl blocks (methods on structs) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

impl Point {
    pub fun distance_to(self, other: Point) -> Float {
        let dx = self.x - other.x
        let dy = self.y - other.y
        sqrt(dx * dx + dy * dy)
    }

    pub fun to_string(self) -> String {
        "(#{self.x}, #{self.y})"
    }
}

let origin = Point { x: 0.0, y: 0.0 }
let dest = Point { x: 3.0, y: 4.0 }
println("Distance: #{origin.distance_to(dest)}")


// â”€â”€ 12. Pattern Matching â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

fun describe_number(n: Int) -> String {
    match n {
        0 => "zero"
        1 | 2 | 3 => "small"
        n if n < 0 => "negative"
        _ => "large"
    }
}

println(describe_number(0))
println(describe_number(2))
println(describe_number(-5))
println(describe_number(100))


